pipeline {
    agent any

        environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        ECR_REPOSITORY = 'ecr-repo'
        IMAGE_TAG = 'latest'
        //AWS_ACCOUNT_ID = sh(returnStdout: true, script: 'aws sts get-caller-identity --query "Account" --output text').trim()
    }
    
    stages {
        stage('Build Docker Image') {
            steps {
                // Your Docker build steps here using the Dockerfile
                sh 'docker build -t /MySQL-and-Python/nourmohamed99/sprints-project:latest .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry(credentialsId: 'DockerHub-Cred', url: 'https://index.docker.io/v1/') {
                    sh 'docker push nourmohamed99/sprints-project:latest'
                }
            }
        }

       
    }
}
